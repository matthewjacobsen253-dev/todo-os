# Update these with your Supabase details from your project settings > API
# https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=your-project-url
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_KEY=your-publishable-or-anon-key

# Gmail OAuth (Google Cloud Console > APIs & Services > Credentials)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/api/auth/gmail/callback

# Microsoft/Outlook OAuth (Azure Portal > App Registrations)
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_REDIRECT_URI=http://localhost:3000/api/auth/outlook/callback

# Claude API for email task extraction
ANTHROPIC_API_KEY=your-anthropic-api-key

# Inngest for background job processing
INNGEST_EVENT_KEY=your-inngest-event-key
INNGEST_SIGNING_KEY=your-inngest-signing-key

# Encryption key for email tokens (generate with: openssl rand -hex 32)
EMAIL_ENCRYPTION_KEY=your-64-char-hex-key
